generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Movie {
  adult Boolean
  backdrop_path String? 
  id Int @id
  genre_ids String
  original_language String
  original_title String
  overview String? @db.Text
  popularity Int
  poster_path String?
  release_date String
  title String
  video Boolean
  vote_average Int
  vote_count Int
  genre String
  words String @db.Text
}